<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientApiClientes.Views.SettingsPage"
             Title="Configurações da API">
    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">
            <Label Text="URL Base da API" FontSize="Medium" FontAttributes="Bold"/>
            <Entry x:Name="BaseUrlEntry" Placeholder="https://localhost:7029" />

            <Label Text="Rotas do CRUD" FontSize="Medium" FontAttributes="Bold" Margin="0,10,0,0"/>
            
            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                <Label Grid.Row="0" Grid.Column="0" Text="Listar Todos (GET):" VerticalOptions="Center"/>
                <Entry Grid.Row="0" Grid.Column="1" x:Name="GetAllEntry" />

                <Label Grid.Row="1" Grid.Column="0" Text="Obter por ID (GET):" VerticalOptions="Center"/>
                <Entry Grid.Row="1" Grid.Column="1" x:Name="GetByIdEntry" />

                <Label Grid.Row="2" Grid.Column="0" Text="Criar (POST):" VerticalOptions="Center"/>
                <Entry Grid.Row="2" Grid.Column="1" x:Name="CreateEntry" />

                <Label Grid.Row="3" Grid.Column="0" Text="Atualizar (PUT):" VerticalOptions="Center"/>
                <Entry Grid.Row="3" Grid.Column="1" x:Name="UpdateEntry" />

                <Label Grid.Row="4" Grid.Column="0" Text="Deletar (DELETE):" VerticalOptions="Center"/>
                <Entry Grid.Row="4" Grid.Column="1" x:Name="DeleteEntry" />
            </Grid>

            <Button Text="Salvar" Clicked="SalvarButton_Clicked" Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
